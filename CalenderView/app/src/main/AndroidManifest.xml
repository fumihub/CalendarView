<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.non_name_hero.calenderview">

    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".calendar.MainActivity"
            android:theme="@style/SplashTheme">
            <!--thema=起動時の画像-->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--入力画面アクティビティ(スケジューラー)-->
        <activity android:name=".inputForm.InputActivity"/>
        <activity android:name=".inputForm.ColorSelectActivity"/>
        <activity android:name=".inputForm.ColorCreateActivity"/>
        <activity android:name=".inputForm.ColorActivity"/>
        <!--入力画面アクティビティ(家計簿)-->
        <activity android:name=".inputForm.InputBalanceActivity"/>
        <activity android:name=".inputForm.CategorySelectActivity"/>
        <activity android:name=".inputForm.SubCategorySelectActivity"/>
        <activity android:name=".inputForm.SubCategoryCreateActivity"/>
        <!--広告用設定-->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3940256099942544~3347511713"/>
        <!--通知用設定-->
        <receiver
            android:name=".notification.AlarmNotification"
            android:process=":remote" >
        </receiver>

    </application>

</manifest>