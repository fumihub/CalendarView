<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.graphics.Color"/>
        <import type="android.view.View"/>
        <import type="com.non_name_hero.calenderview.utils.BalanceType"/>
        <variable
            name="currentMode"
            type="Boolean"/>
        <variable
            name="calendarData"
            type="com.non_name_hero.calenderview.data.CalendarData" />
        <variable
            name="balanceData"
            type="com.non_name_hero.calenderview.data.BalanceData" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/schedule_list_margin"
        android:orientation="horizontal">

        <!--クリックした日付のスケジュール-->
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/schedule_list_fragment_item_padding"
            android:text="@{calendarData.scheduleTitle}"
            android:textColor="@{calendarData.getTextColor() ? Color.BLACK : Color.WHITE}"
            android:visibility="@{currentMode?View.GONE:View.VISIBLE}"
            />

        <!--クリックした日付の家計簿-->
        <TextView
            android:id="@+id/balanceText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/schedule_list_fragment_item_padding"
            android:text="@{balanceData.priceText}"
            android:textColor="@{Color.WHITE}"
            android:background="@{balanceData.balanceType == BalanceType.EXPENSES ? @color/redColor3 : @color/blueColor3}"
            android:visibility="@{currentMode?View.VISIBLE:View.GONE}"
            />

    </LinearLayout>

</layout>